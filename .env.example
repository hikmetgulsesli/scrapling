# Scrapling Environment Configuration
# Copy this file to .env and fill in your values

# Rate Limiting
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW_SECONDS=60

# Retry Configuration
MAX_RETRIES=3
RETRY_BACKOFF_BASE=1
RETRY_BACKOFF_MAX=30

# Cache Configuration
CACHE_ENABLED=1
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE_MB=100

# Session Persistence
SESSION_PERSISTENCE=1
SESSION_TIMEOUT_SECONDS=1800

# API Keys (for site-specific adaptors)
AMAZON_API_KEY=
LINKEDIN_API_KEY=
TWITTER_API_KEY=

# Dashboard
DASHBOARD_PORT=8080
DASHBOARD_HOST=0.0.0.0

# Logging
LOG_LEVEL=INFO
LOG_FILE=

# User Agents
DEFAULT_USER_AGENT=Mozilla/5.0 (compatible; Scrapling/1.0)
